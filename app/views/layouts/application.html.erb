<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="<%= params[:action] %>">
    <% if user_signed_in? %>
      <%= link_to (t 'defaults.books'), books_path %>
      <%= link_to (t 'defaults.users'), users_path %>
      <%= link_to (t 'defaults.my_page'), current_user %>
      <%= link_to (t 'defaults.logout'), destroy_user_session_path,
                  data: { "turbo-method": :delete } %>
    <% end %>
    <%= yield %>
  </body>
</html>
